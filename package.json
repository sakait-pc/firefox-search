{
  "name": "firefox-search",
  "private": true,
  "version": "0.1.0",
  "main": "main/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "dist": "vite build && tsc -p src/electron && electron-builder --win --x64",
    "dist-mac": "vite build && tsc -p src/electron && electron-builder --mac --arm64",
    "clean": "rm -rf dist main out",
    "preview": "vite preview",
    "server:vite": "vite",
    "server:electron": "chcp 65001 && tsc -p src/electron && electron .",
    "start": "run-p server:*",
    "server-mac:vite": "vite",
    "server-mac:electron": "tsc -p src/electron && electron .",
    "sm": "run-p server-mac:*"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sqlite3": "^5.1.2"
  },
  "devDependencies": {
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^2.1.0",
    "electron": "^21.1.1",
    "electron-builder": "^23.6.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.6.4",
    "vite": "^3.1.0"
  },
  "build": {
    "appId": "com.electron.firefoxsearch",
    "directories": {
      "output": "dist"
    },
    "files": [
      "assets",
      "main",
      "out",
      "package.json",
      "package-lock.json"
    ],
    "mac": {
      "icon": "assets/icon.png",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "assets/icon.png",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
